<Window x:Class="Kubernetes.Windows.DeploymentDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Kubernetes.Windows"
             mc:Ignorable="d"
             Width="300"
             Height="200">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Replicas: " />
                <TextBox x:Name="ReplicaCount" Width="55" />
            </StackPanel>
            <Button Content="Cancel" Click="CancelClick" Width="50" />
            <Button Content="OK" Click="OkClick" Width="50" />
        </StackPanel>
    </Grid>
</Window>